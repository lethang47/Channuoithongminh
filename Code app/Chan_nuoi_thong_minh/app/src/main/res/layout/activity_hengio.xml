<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hengio">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Hẹn giờ cho ăn"
        android:textColor="#52B317"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="63dp"
        tools:textColor="#52B317" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="73dp"
        android:text="Ngày"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="297dp"
        android:text="Số lượng"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/id_bt_gio"
        style="?android:spinnerStyle"
        android:layout_width="214dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="221dp"
        android:backgroundTint="#CCCCCC"
        android:text="23:00"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="187dp"
        android:text="Giờ"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/id_bt_xacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="287dp"
        android:backgroundTint="#52B317"
        android:text="Xác nhận"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/id_bt_ngay"
        style="?android:spinnerStyle"
        android:layout_width="214dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="111dp"
        android:backgroundTint="#CCCCCC"
        android:text="28/7/2022"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="275dp"
        android:background="#BCBCBC" />

    <ListView
        android:id="@+id/id_lv_danhsachhengio"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-2dp" />

    <EditText
        android:id="@+id/id_et_soluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="86dp"
        android:ems="10"
        android:hint="Số lượng(gam)"
        android:inputType="number"
        android:minHeight="48dp" />

</RelativeLayout>